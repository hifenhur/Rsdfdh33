<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AutoCompleteTextViewExpark" parent="android:Widget.Holo.Light.AutoCompleteTextView">
        <item name="android:dropDownSelector">@drawable/expark_list_selector_holo_light</item>
        <item name="android:background">@drawable/expark_edit_text_holo_light</item>
    </style>

    <style name="ButtonExpark" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/expark_btn_default_holo_light</item>
    </style>

    <style name="ImageButtonExpark" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@drawable/expark_btn_default_holo_light</item>
    </style>

    <style name="SpinnerExpark" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/expark_spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/expark_list_selector_holo_light</item>
    </style>

    <style name="TabExpark">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:background">@drawable/expark_tab_indicator_holo</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">80dip</item>
    </style>

    <style name="TabTextExpark">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <!-- v14 <item name="android:textAllCaps">true</item> -->
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">2</item>
        <item name="android:maxWidth">180dip</item>
    </style>

    <style name="ProgressBarExpark" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/expark_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/expark_progress_indeterminate_horizontal_holo_light</item>
    </style>

    <style name="SeekBarExpark" parent="android:Widget.Holo.Light.SeekBar">
        <item name="android:progressDrawable">@drawable/expark_scrubber_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/expark_scrubber_progress_horizontal_holo_light</item>
        <item name="android:thumb">@drawable/expark_scrubber_control_selector_holo_light</item>
    </style>

    <style name="RatingBarExpark" parent="android:Widget.Holo.Light.RatingBar">
        <item name="android:progressDrawable">@drawable/expark_ratingbar_full_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/expark_ratingbar_full_holo_light</item>
    </style>

    <style name="RatingBarBigExpark" parent="android:Widget.Holo.Light.RatingBar.Indicator">
        <item name="android:progressDrawable">@drawable/expark_ratingbar_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/expark_ratingbar_holo_light</item>
    </style>

    <style name="RatingBarSmallExpark" parent="android:Widget.Holo.Light.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/expark_ratingbar_small_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/expark_ratingbar_small_holo_light</item>
    </style>

    <style name="ToggleExpark" parent="android:Widget.Holo.Light.Button.Toggle">
        <item name="android:background">@drawable/expark_btn_toggle_holo_light</item>
    </style>
</resources>
